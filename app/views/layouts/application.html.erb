<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= (content_for?(:title) ? "#{yield(:title)} | " : (content_for?(:meta_title) ? "#{yield(:meta_title)} | " : "")) + "#{t('app.common.app_name_not_trans')}" %></title>
    <%= csrf_meta_tags %>
	  <%= include_gon %>

	  <meta property="og:title" content="<%= content_for?(:title) ? ("#{yield(:title)} | #{t('app.common.app_name_not_trans')}").html_safe :
			  t('app.common.app_name_not_trans').html_safe %>" />
    <meta name="description" content="<%= I18n.t('app.common.app_intro_meta') %>">
		<meta property="og:description" content="<%= I18n.t('app.common.app_intro_meta') %>" />
	  <meta property="og:type" content="non_profit" />
	  <meta property="og:url" content="<%= current_url %>" />
    <% if @story && @story.id && @story.asset_exists? %>
       <meta property="og:image" content="<%= full_url(@story.asset.file.url(:"250x250", false)) %>" />
    <% else %>
      <meta property="og:image" content="<%= full_url('/assets/fb-img.jpg') %>" />
    <% end %>
	  <meta property="og:site_name" content="<%= t('app.common.app_name_not_trans') %>" />
	  <meta property="fb:app_id" content="<%= ENV['FACEBOOK_APP_ID'] %>" />

    <meta name="google" content="notranslate" />

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag  *(@css.present? ? ["application",@css].flatten : ["application"]), :media => "all" %>
    <%= auto_discovery_link_tag(:atom, feed_path(:format => "atom")) %>

		<!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
	  <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag '/favicon.ico', :rel => 'shortcut icon' %>
  </head>
  <body id="<%= yield(:body_id) %>">
    <%= render partial: "layouts/storybuilder_nav"%>
    <%= yield(:header) %>
		<div id="wrapper">
   		<div class="flash-message"></div>
				<% if content_for?(:title) %>
					<div class="page-header">
					  <div class="block">
              <h1>
							  <%= yield(:title) %>
						  </h1>
						</div>
					</div>
				<% end %>
        <%= yield %>
		</div><!--/wrapper-->
    <%= yield(:footer) %>
    <div class="footer">
        <%= link_to(image_tag("svg/slogo.svg",:style=>"vertical-align:middle;",:alt=>t('app.common.app_name_not_trans')) , root_path(:locale => I18n.locale), title: t('app.common.app_name'), :class=>"slogo-bottom") %>
        <%= link_to(image_tag("svg/logo.svg",:style=>"vertical-align:middle;",:alt=>t('app.common.app_name_not_trans')) , root_path(:locale => I18n.locale), title: t('app.common.app_name'), :class=>"logo") %>
        <div class="powered-by">
          <%= t("app.common.powered_by") %>&nbsp;&nbsp;<a href="https://www.jumpstart.ge" target="_blank" title="<%= t("app.common.js_link_title") %>"><%= t("app.common.powered_by_js") %></a><%= t("app.common.powered_by_end") %>
        </div>
        <div class="center">
          <div><%= link_to t('helpers.links.about'), about_path %></div>
          <div>|</div>
          <div class='copy' data-tip="<%= t('.copyright_text') %>">&copy; <%= t('.copyright') %></div>
        </div>

    </div>
    <div class="tip"><div class="content"></div><div class="pointer"></div></div>
    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag  *(@js.present? ? ["application", @js].flatten : ["application"]), :media => "all" %>

		<script type="text/javascript">
			I18n.defaultLocale = "<%= I18n.default_locale %>";
			I18n.locale = "<%= I18n.locale %>";
      <% flash.each do |key, msg| %>
        popuper("<%= msg %>" , "<%= key %>");
      <% end %>
		</script>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=<%= @face_id %>&version=v2.0";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
		<% if Rails.env.production? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-12801815-39', 'auto');
        ga('send', 'pageview');

      </script>
		<% end %>
    <%= yield(:js) %>

  </body>
</html>
